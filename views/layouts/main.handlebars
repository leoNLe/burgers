<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <script src="https://unpkg.com/axios/dist/axios.min.js"></script>
  <link rel="stylesheet" href="/assets/css/burger_style.css">
  <title> Give me Burgers </title>
</head>
<body>
  <div class="main-img-div"> 
    <img src="/assets/img/ingredient.jpg" alt="" class="image">
  </div>
  <div class="handlebar-div">
    {{{body}}}
  </div>
  <div class="addition-div">
    <textarea id="newBurgerTextArea" cols="30" rows="5"></textarea>
    <button id="addBurger-btn" type="submit">Add</button>

    <script> 
      document.getElementById("addBurger-btn").addEventListener("click", (event)=>{
        event.preventDefault();
        const newBurger = document.getElementById("newBurgerTextArea").value;

        axios.post("/api/add", {name: newBurger})
          .then(response => {
            console.log(response)
            location.reload();
          })
          .catch((err)=> console.log(err));
      })
    </script>
  </div>

</body>
</html>